<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/verdef">

    <ImageView
        android:id="@+id/imgLogin"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/cimlogo" />

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:drawableEnd="@drawable/baseline_email"
        android:hint="Insira seu e-mail"
        android:inputType="textEmailAddress"
        android:textColor="#FFFFFF"
        android:maxLength="80"
        android:padding="10sp" />

    <EditText
        android:id="@+id/edtSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:drawableEnd="@drawable/baseline_lock"
        android:hint="Insira sua senha"
        android:inputType="textPassword"
        android:maxLength="80"
        android:padding="10sp"
        android:textColor="#FFFFFF" />





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >





    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20sp"
        android:orientation="horizontal"
        android:scaleType="centerCrop"
        >

        <TextView
            android:id="@+id/textinho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="5dp"
            android:text="Don't have an account yet?"
            android:textColor="#B6AEAE"

            />

        <TextView
            android:id="@+id/textinpreto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="60dp"
            android:text="Sing Up. "
            android:textColor="#454141" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:orientation="horizontal"
        android:paddingTop="132sp"
        >

        <Button
            android:id="@+id/btnSair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:padding="20dp"
            android:text="Sign in with facebook"
            android:textAllCaps="true"

            />

    </LinearLayout>


</LinearLayout>